{
  "name": "kwant.ai-api-automation",
  "version": "1.0.0",
  "description": "API Test Automation with Newman and Allure",
  "main": "run-tests.js",
  "scripts": {
    "test": "node run-tests.js",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "deploy:surge": "surge reports/allure-report kwant-automation-dashboard.surge.sh",
    "report": "npm run test && npm run allure:generate && npm run deploy:surge"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "moment-timezone": "^0.6.0",
    "newman": "^6.2.1"
  },
  "devDependencies": {
    "allure-commandline": "^2.34.1",
    "newman-reporter-allure": "^2.15.1"
  }
}
